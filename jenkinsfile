pipeline {
    agent any

    stages {
        stage('first-stage') {
            steps {
                sh '''
                    echo "Running from the first stage"
                    touch first-stage-doc.txt
                '''
            }
        }

        stage('second-stage') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "Running from the first stage"
                    touch second-stage-doc.txt
                '''
            }
        }
    }
}